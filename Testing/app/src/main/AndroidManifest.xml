<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.testing" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:noHistory="true"
        >
        <activity
            android:name=".MyActivity.MainActivity"
            android:label="@string/app_name" >
        <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MyActivity.HomeActivity"
            android:label="@string/title_activity_home"
            android:launchMode="singleTop"
           >
        </activity>
        <activity
            android:name=".MyActivity.ActivitySport"
            android:label="@string/title_activity_activity_sport" >
        </activity>
        <activity
            android:name=".MyActivity.ActivityTeam"
            android:label="@string/title_activity_activity_team" >
        </activity>
    </application>

</manifest>
